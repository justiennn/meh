#include <iostream>
using namespace std;
int main ()
{
   int snt;
   
   cout << "Nhập một số: ";
   cin >> snt;
   
   int i;
   i=1;
   
   while (i<snt)  {    
       if (snt%i==0) 
       break;
       i++;
       }
   if (snt==i) {
       cout << "Đây là số nguyên tố";
       }
   else {cout << "Đây không phải là số nguyên tố";}
}
